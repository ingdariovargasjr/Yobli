<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogOptions">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="261dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnLoginFacebook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bottom_color"
        android:text="INICIA SESION CON CORREO"
        android:textAlignment="center"
        android:textColor="@drawable/txt_btn_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintVertical_bias="0.223" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bottoms"
        android:text="@string/iniciar_seseion_con_facebook"
        android:textAlignment="center"
        android:textColor="@drawable/txt_btn_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintVertical_bias="0.194" />




</androidx.constraintlayout.widget.ConstraintLayout>