<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/txt_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favoritos"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_fav_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fav1"
        android:layout_below="@+id/txt_fav"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/fav_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ricardo Septiem"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/img_fav_1"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/fav_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DiseÃ±o | Condesa"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_below="@+id/fav_2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite"
        android:layout_toRightOf="@id/img_fav_1"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="200dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_fav_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fav2"
        android:layout_below="@+id/img_fav_1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/fav_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mariel Figallo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/fav_3"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:id="@+id/fav_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salud | Santa Fe"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_below="@+id/fav_4"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite"
        android:layout_toRightOf="@id/img_fav_2"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="200dp"/>



</RelativeLayout>