<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#ECF0F1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/agenda"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/picker">

                <DatePicker
                    android:id="@+id/datePiker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#ECF0F1">

                <TextView
                    android:id="@+id/txt_eventos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pr_ximos_eventos"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_event1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event1"
                    android:layout_below="@+id/txt_eventos"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/txt_cocina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clase de cocina personal (2 personas)"
                    android:textSize="10sp"
                    android:layout_toRightOf="@+id/img_event1"
                    android:textColor="#000000"
                    android:layout_marginTop="70dp" />

                <TextView
                    android:id="@+id/txt_cocina2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 de Enero del 2021 19:00pm"
                    android:textSize="10sp"
                    android:layout_below="@+id/txt_cocina"
                    android:layout_toRightOf="@+id/img_event1"
                    android:textColor="#000000" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_event2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event2"
                    android:layout_below="@+id/img_event1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/txt_limpieza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza de parque"
                    android:textSize="10sp"
                    android:layout_below="@+id/txt_cocina2"
                    android:textColor="#000000"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="85dp"/>

                <TextView
                    android:id="@+id/txt_limpieza2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 de Enero del 2021 16:00pm"
                    android:textSize="10sp"
                    android:layout_below="@+id/txt_limpieza"
                    android:textColor="#000000"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="85dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_event3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event3"
                    android:layout_below="@+id/img_event2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/txt_escritura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taller de Escritura Creativa"
                    android:textSize="10sp"
                    android:layout_below="@+id/txt_limpieza2"
                    android:textColor="#000000"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="85dp"/>

                <TextView
                    android:id="@+id/txt_escritura2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 de Enero del 2021 17:00pm"
                    android:textSize="10sp"
                    android:layout_below="@+id/txt_escritura"
                    android:textColor="#000000"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="85dp"/>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>